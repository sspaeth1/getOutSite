<%- include('partials/header')%>

<div class="container">
  <div class="">
    <header class="jumbotron">
      <h1>Welcome to Campground Selector</h1>
      <p>View our handpicked campgrounds.</p>
      <a class="btn btn-primary btn-large"href="/campgrounds/new">Add new campground</a>
    </header>
  </div>

  <div class="row">
    <% campground.forEach(function(campground){ %>
      <div class="col-md-3 `col-sm-6">
        <div class="img-thumbnail m-2" >
          <img src="<%= campground.image%>" class="card-img-top" alt="" >
        </div>
        <div class="">
            <h4>
               <%=  campground.name %>
            </h4>
        </div>
      </div>
    <% }); %>
  </div>
</div>


<%- include ('partials/footer') %>
